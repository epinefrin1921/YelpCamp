<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="validated-form">
            <div class='mb-3'>
                <label class='form-label' for="title">Title</label>
                <input type="text" class="form-control" name="campground[title]" id="title" placeholder="Title" required
                    value="<%= campground.title %>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class='mb-3'>
                <label class='form-label' for="location">Location</label>
                <input type="text" class="form-control" name="campground[location]" id="location" required
                    placeholder="Location" value="<%= campground.location %>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class='mb-3'>
                <label class='form-label' for="image">Image</label>
                <input type="text" class="form-control" name="campground[image]" id="image" required placeholder="image"
                    value="<%= campground.image %>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class='form-label' for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="priceLabel">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" required
                        aria-describedby="priceLabel" id="price" name="campground[price]"
                        value="<%= campground.price %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class='mb-3'>
                <label class='form-label' for="description">Description</label>
                <textarea type="text" class="form-control" name="campground[description]" id="description" required
                    placeholder="Description"><%= campground.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class='mb-3'>
                <button class="btn btn-info" type="submit">Save campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
    </div>
</div>