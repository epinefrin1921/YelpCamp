<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form class="validated-form" action="/campgrounds" method="post" novalidate enctype="multipart/form-data">
            <div class='mb-3'>
                <label class='form-label' for="title">Title</label>
                <input type="text" class="form-control" name="campground[title]" id="title" placeholder="Title"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class='mb-3'>
                <label class='form-label' for="location">Location</label>
                <input type="text" class="form-control" name="campground[location]" id="location" required
                    placeholder="Location">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- <div class='mb-3'>
                <label class='form-label' for="image">Image</label>
                <input type="text" class="form-control" name="campground[image]" id="image" placeholder="image"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div> -->
            <!-- </div> -->
            <div class="mb-3">
                <label class='form-label' for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="priceLabel">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" required
                        aria-describedby="priceLabel" id="price" name="campground[price]">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class='mb-3'>
                <label class='form-label' for="description">Description</label>
                <textarea type="text" class="form-control" name="campground[description]" id="description" required
                    placeholder="Description"></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add Images</label>
                <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
            </div>

            <div class='mb-3'>
                <button class="btn btn-success" type="submit">Add campground</button>
            </div>
        </form>
    </div>
</div>